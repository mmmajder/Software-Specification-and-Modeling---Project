<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="550.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="view.librarian.ReservationsLibrarianController">
    <BorderPane prefHeight="550.0" prefWidth="900.0" style="-fx-background-color: #7AB12B;">
        <center>
            <VBox prefHeight="517.0" prefWidth="613.0" style="-fx-background-color: #7AB12B;" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" />
                </BorderPane.margin>
                <HBox prefHeight="25.0" prefWidth="860.0" style="-fx-background-color: #7AB12B;">
