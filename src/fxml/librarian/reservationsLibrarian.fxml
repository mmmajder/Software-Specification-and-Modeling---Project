                        <columns>
                            <TableColumn prefWidth="137.0" text="Member" />
                            <TableColumn prefWidth="137.0" text="Book ID" />
                            <TableColumn prefWidth="75.0" text="Days left" />
                        </columns>
                    </TableView>
                </HBox>
                <Separator prefHeight="30.0" prefWidth="200.0" visible="false" />
                <HBox prefHeight="54.0" prefWidth="860.0">
                    <VBox.margin>
                        <Insets left="30.0" />
                    </VBox.margin>
                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: #ABC82E;" text="APPROVE" textFill="WHITE">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Separator orientation="VERTICAL" prefHeight="52.0" prefWidth="18.0" visible="false" />
                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: #ABC82E;" text="DECLINE" textFill="WHITE">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                    <Separator orientation="VERTICAL" prefHeight="122.0" prefWidth="100.0" visible="false" />
                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="350.0" style="-fx-background-color: #ABC82E;" text="ISSUE" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</Pane>
