<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" minHeight="650.0" minWidth="950.0" prefHeight="650.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../style.css"
            fx:controller="view.librarian.LibrarianController">
    <top>
        <HBox minHeight="50.0" prefHeight="50.0" prefWidth="950.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
            <Separator orientation="VERTICAL" prefHeight="126.0" prefWidth="75.0" visible="false" HBox.hgrow="NEVER"/>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
                <Image url="@../logo.png"/>
            </ImageView>
            <Separator orientation="VERTICAL" prefHeight="50.0" prefWidth="100.0" HBox.hgrow="NEVER" visible="false"/>
            <Label fx:id="lblBooks" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#switchToBooks"
                   prefHeight="99.0" prefWidth="99.0" text="BOOKS" textFill="#63ac29" HBox.hgrow="NEVER">
                <font>
                    <Font name="SansSerif Bold" size="12.0"/>
                </font>
            </Label>
            <Separator orientation="VERTICAL" prefHeight="71.0" prefWidth="20.0" visible="false" HBox.hgrow="NEVER"/>
            <Label fx:id="lblMembers" alignment="CENTER" contentDisplay="CENTER" HBox.hgrow="NEVER"
                   onMouseClicked="#switchToMembers"
                   prefHeight="79.0" prefWidth="122.0" text="MEMBER" textFill="#63ac29">
                <font>
                    <Font name="SansSerif Bold" size="12.0"/>
                </font>
            </Label>
            <Separator orientation="VERTICAL" HBox.hgrow="NEVER" prefHeight="71.0" prefWidth="20.0" visible="false"/>
            <Label fx:id="lblReservations" alignment="CENTER" HBox.hgrow="NEVER" contentDisplay="CENTER"
                   onMouseClicked="#switchToReservations"
                   prefHeight="79.0" prefWidth="150.0" text="RESERVATION" textFill="#63ac29">
                <font>
                    <Font name="SansSerif Bold" size="12.0"/>
                </font>
            </Label>
            <Separator orientation="VERTICAL" HBox.hgrow="NEVER" prefHeight="71.0" prefWidth="20.0" visible="false"/>
            <Label fx:id="lblRentedBooks" alignment="CENTER" contentDisplay="CENTER"
                   onMouseClicked="#switchToRentedBooks" prefHeight="79.0" prefWidth="150.0" text="RENTED BOOKS"
                   textFill="#63ac29" HBox.hgrow="NEVER">
                <font>
                    <Font name="SansSerif Bold" size="12.0"/>
                </font>
            </Label>
            <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefHeight="71.0" prefWidth="20.0"
                       visible="false"/>
            <Label fx:id="lblUsername" alignment="CENTER_RIGHT" HBox.hgrow="NEVER" contentDisplay="CENTER"
                   prefHeight="50.0"
                   prefWidth="311.0" textFill="#63ac29">
                <font>
                    <Font name="SansSerif Bold" size="12.0"/>
                </font>
            </Label>
            <Separator orientation="VERTICAL" prefHeight="71.0" HBox.hgrow="NEVER" prefWidth="40.0" visible="false"/>
            <ImageView fitHeight="50.0" fitWidth="50.0" HBox.hgrow="NEVER" onMouseClicked="#logOut" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@../logout.png"/>
            </ImageView>
        </HBox>
    </top>
</BorderPane>
