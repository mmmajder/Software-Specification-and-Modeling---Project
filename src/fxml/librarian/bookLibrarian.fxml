                <left>
                    <ImageView onMouseClicked="#backToBooks" fitHeight="72.0" fitWidth="76.0" pickOnBounds="true"
                               preserveRatio="true"
                               BorderPane.alignment="CENTER">
                        <Image url="@../back.png"/>
                    </ImageView>
                </left>
            </BorderPane>
        </bottom>
        <right>
            <AnchorPane prefHeight="432.0" prefWidth="143.0" BorderPane.alignment="CENTER">
                <Label fx:id="lblShelf" layoutX="52.0" layoutY="30.0" text="Shelf" textFill="#f1a350" underline="true">
