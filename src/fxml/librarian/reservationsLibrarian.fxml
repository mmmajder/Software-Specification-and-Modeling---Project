                        <Insets left="30.0" top="30.0" />
                    </VBox.margin>
                    <Label text="RESERVATION REQUESTS" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <Separator orientation="VERTICAL" prefHeight="22.0" prefWidth="317.0" visible="false" />
                    <Label text="APPROVED RESERVATIONS" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                </HBox>
                <Separator prefHeight="10.0" prefWidth="200.0" visible="false" />
