<AnchorPane fx:id="bookPane" stylesheets="@../style.css" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="view.member.BookPaneController" style="../style.css">
    <BorderPane layoutX="-1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="600.0">
        <right>
            <Pane prefHeight="400.0" prefWidth="304.0" BorderPane.alignment="CENTER">
                <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="241.0" layoutX="30.0" layoutY="51.0"
                           pickOnBounds="true"
                           preserveRatio="true"/>
            </Pane>
        </right>
        <left>
            <Pane prefHeight="400.0" prefWidth="295.0" BorderPane.alignment="CENTER">
                <Label fx:id="lblTitle" layoutX="14.0" layoutY="36.0" prefHeight="45.0" prefWidth="274.0"
                       textFill="#3f3f3f">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="lblAuthor" layoutX="14.0" layoutY="101.0" prefHeight="32.0" prefWidth="263.0"
                       textFill="#3f3f3f">
                    <font>
                        <Font name="System Italic" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="lblAvailable" layoutX="14.0" layoutY="318.0" prefHeight="50.0" prefWidth="258.0">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
            </Pane>
        </left>
    </BorderPane>
</AnchorPane>
