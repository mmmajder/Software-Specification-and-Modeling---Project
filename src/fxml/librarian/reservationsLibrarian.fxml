                    </Label>
                    <Separator prefHeight="18.0" prefWidth="252.0" visible="false"/>
                    <TableView fx:id="reservationRequestTable" prefHeight="313.0" prefWidth="350.0">
                        <columns>
                            <TableColumn prefWidth="175.0" text="Member"/>
                            <TableColumn prefWidth="174.0" text="Edition"/>
