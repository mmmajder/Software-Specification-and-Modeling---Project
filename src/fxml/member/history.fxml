<Pane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.librarian.HistoryController">>
    <BorderPane prefHeight="550.0" prefWidth="900.0" style="-fx-background-color: #63AC29;">
        <center>
          <TableView fx:id="table" prefHeight="462.0" prefWidth="860.0" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="title" prefWidth="450.0" text="Book title"/>
                  <TableColumn fx:id="issueDate" prefWidth="110.0" text="Issue date"/>
                  <TableColumn fx:id="returnDate" prefWidth="110.0" text="Return date"/>
                  <TableColumn fx:id="status" minWidth="0.0" prefWidth="189.0" text="Status"/>
              </columns>
              <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="30.0"/>
              </BorderPane.margin>
          </TableView>
        </center>
        <bottom>
          <BorderPane prefHeight="33.0" prefWidth="880.0" BorderPane.alignment="CENTER">
              <right>
                  <Label text="PROLONG" textFill="WHITE" BorderPane.alignment="CENTER">
                      <font>
                          <Font name="System Bold" size="18.0"/>
                      </font>
                  </Label>
              </right>
              <BorderPane.margin>
                  <Insets bottom="20.0" right="20.0"/>
              </BorderPane.margin>
          </BorderPane>
        </bottom>
    </BorderPane>
</Pane>
