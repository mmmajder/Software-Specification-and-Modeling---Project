<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="view.librarian.CreateEditionController">
    <BorderPane prefHeight="550.0" prefWidth="900.0">
        <left>
            <VBox prefHeight="475.0" prefWidth="287.0" style="-fx-background-color: ffffff;"
                  BorderPane.alignment="CENTER">
                <Pane prefHeight="264.0" prefWidth="287.0">
                    <ImageView fitHeight="216.0" fitWidth="194.0" layoutX="14.0" layoutY="23.0"
                               pickOnBounds="true" preserveRatio="true">

                    </ImageView>
                    <Label layoutX="60.0" layoutY="38.0" prefHeight="186.0"
                           prefWidth="103.0" text="UPLOAD PICTURE" textFill="#63ac29" wrapText="true">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                </Pane>
                <BorderPane prefHeight="16.0" prefWidth="295.0">
                    <left>
                        <Label text="Published date:" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </Label>
                    </left>
                    <right>
                        <DatePicker prefHeight="25.0" prefWidth="150.0" BorderPane.alignment="CENTER">
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                        </DatePicker>
                    </right>
                </BorderPane>
                <Separator prefWidth="200.0" visible="false"/>
                <BorderPane prefHeight="21.0" prefWidth="295.0">
                    <left>
                        <Label text="Language:" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </Label>
                    </left>
                    <right>
                        <ComboBox fx:id="languageCB" prefHeight="25.0" prefWidth="150.0" BorderPane.alignment="CENTER"/>
                    </right>
                </BorderPane>
                <Separator prefWidth="200.0" visible="false"/>
                <BorderPane prefHeight="23.0" prefWidth="295.0">
                    <left>
                        <Label text="Publisher:" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </Label>
                    </left>
                    <right>
                        <ComboBox fx:id="publisherCB" prefWidth="150.0" BorderPane.alignment="CENTER"/>
                    </right>
                </BorderPane>
                <Separator prefWidth="200.0" visible="false"/>
                <BorderPane>
                    <left>
                        <Label text="Number of pages:" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </Label>
                    </left>
                    <right>
                        <Spinner BorderPane.alignment="CENTER"/>
                    </right>
                </BorderPane>
                <Separator prefWidth="200.0" visible="false"/>
                <BorderPane>
                    <left>
                        <Label text="Genre:" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </Label>
                    </left>
                    <right>
                        <ComboBox fx:id="genreCB" prefWidth="150.0" BorderPane.alignment="CENTER"/>
                    </right>
                </BorderPane>
                <Separator prefWidth="200.0" visible="false"/>
                <BorderPane>
                    <left>
                        <Label text="Tags:" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </Label>
                    </left>
                    <right>
                        <ComboBox fx:id="tagsCB" prefWidth="150.0" BorderPane.alignment="CENTER"/>
                    </right>
                </BorderPane>
                <Separator prefWidth="200.0" visible="false"/>
                <Pane prefHeight="55.0" prefWidth="287.0">
                    <Label layoutY="6.0" text="Contributors:">
                        <padding>
                            <Insets left="20.0"/>
                        </padding>
                    </Label>
                    <ScrollPane layoutX="137.0" layoutY="2.0" prefHeight="50.0" prefWidth="150.0">
                        <TextField prefHeight="206.0" prefWidth="133.0"/>
                    </ScrollPane>
                    <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="97.0" layoutY="2.0"
                               pickOnBounds="true" preserveRatio="true">
                        <Image url="@../plus.png"/>
                    </ImageView>
                </Pane>
            </VBox>
        </left>
        <center>
            <VBox prefHeight="517.0" prefWidth="613.0" style="-fx-background-color: ffffff;"
                  BorderPane.alignment="CENTER">
                <Separator prefHeight="28.0" prefWidth="608.0" visible="false"/>
                <HBox prefHeight="35.0" prefWidth="605.0">
                    <Label fx:id="lblTitle" prefHeight="17.0" prefWidth="43.0" text="Title:"
                           textFill="#63ac29">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="5.0"/>
                        </HBox.margin>
                    </Label>
                    <Separator orientation="VERTICAL" prefHeight="200.0" visible="false"/>
                    <TextField prefWidth="149.0"/>
                    <Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="174.0" visible="false"/>
                    <Label prefHeight="24.0" prefWidth="58.0" text="Position:"
                           textFill="#63ac29">
                        <font>
                            <Font name="System Italic" size="12.0"/>
                        </font>
                    </Label>
                    <TextField/>
                </HBox>
                <HBox prefHeight="35.0" prefWidth="605.0">
                    <Label text="Writter:" textFill="#63ac29">
                        <HBox.margin>
                            <Insets left="5.0"/>
                        </HBox.margin>
                    </Label>
                    <Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="7.0" visible="false"/>
                    <ComboBox fx:id="writerCB" prefWidth="150.0"/>
                    <Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="175.0" visible="false"/>
                    <Label prefHeight="27.0" prefWidth="167.0" text="+ ADD NEW CONTRIBUTOR"
                           textFill="#63ac29">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                </HBox>
                <Separator prefHeight="16.0" prefWidth="613.0" visible="false"/>
                <HBox prefHeight="35.0" prefWidth="605.0">
                    <TextArea minHeight="-Infinity" minWidth="-Infinity" prefHeight="378.0"
                              prefWidth="598.0" promptText="book description"
                              style="-fx-font-style: #63ac29;">
                        <HBox.margin>
                            <Insets left="5.0"/>
                        </HBox.margin>
                    </TextArea>
                </HBox>
                <Separator prefHeight="20.0" prefWidth="608.0" visible="false"/>
            </VBox>
        </center>
        <bottom>
            <BorderPane prefHeight="64.0" prefWidth="900.0" style="-fx-background-color: ffffff;"
                        BorderPane.alignment="CENTER">
                <right>
                    <Pane prefHeight="76.0" prefWidth="382.0" BorderPane.alignment="CENTER">
                        <Button layoutX="214.0" layoutY="25.0" mnemonicParsing="false" prefHeight="30.0"
                                prefWidth="154.0" style="-fx-background-color: #7AB12B;" text="SAVE"
                                textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button layoutX="38.0" layoutY="25.0" mnemonicParsing="false" prefHeight="30.0"
                                prefWidth="154.0" style="-fx-background-color: #FF0000;" text="REMOVE"
                                textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                    </Pane>
                </right>
                <center>
                    <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
                </center>
            </BorderPane>
        </bottom>
    </BorderPane>
</AnchorPane>
