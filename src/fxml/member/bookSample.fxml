<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<AnchorPane fx:id="bookPane" minHeight="130.0" minWidth="300.0" prefHeight="130.0" prefWidth="300.0"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.member.BookPaneController">
    <BorderPane prefHeight="130.0" prefWidth="300.0">
        <left>
            <Pane prefHeight="130.0" prefWidth="185.0" BorderPane.alignment="CENTER">
                <VBox prefHeight="130.0" prefWidth="202.0">
                    <Label fx:id="lblTitle" alignment="CENTER" prefHeight="38.0" prefWidth="203.0"
                           textAlignment="CENTER" textFill="#3f3f3f">
                        <font>
                            <Font name="System Bold" size="10.0"/>
                        </font>
                    </Label>
                    <Separator prefHeight="14.0" prefWidth="95.0" visible="false"/>
                    <Label fx:id="lblAuthor" alignment="CENTER" prefHeight="22.0" prefWidth="204.0"
                           textAlignment="CENTER" textFill="#3f3f3f">
                        <font>
                            <Font name="System Italic" size="10.0"/>
                        </font>
                    </Label>
                    <Separator prefHeight="22.0" prefWidth="95.0" visible="false"/>
                    <Label fx:id="lblAvailable" alignment="CENTER" prefHeight="32.0" prefWidth="203.0"
                           textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="10.0"/>
                        </font>
                    </Label>
                </VBox>
            </Pane>
        </left>
        <right>
            <Pane prefHeight="130.0" prefWidth="106.0" BorderPane.alignment="CENTER">
                <ImageView fx:id="imageView" fitHeight="107.0" fitWidth="94.0" layoutX="6.0" layoutY="12.0"
                           pickOnBounds="true" preserveRatio="true">
                    <Image url="@../TheLittlePrince.jpg"/>
                </ImageView>
            </Pane>
        </right>
    </BorderPane>
</AnchorPane>
