<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="600.0" minWidth="950.0" prefHeight="600.0" prefWidth="950.0"
            style="-fx-background-color: #63AC29;" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="view.librarian.BookCRUDController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                <TableView fx:id="editionTable" prefHeight="207.0" prefWidth="910.0">
                    <columns>
                        <TableColumn fx:id="id" prefWidth="241.0" text="ID"/>
                        <TableColumn fx:id="state" prefWidth="431.0" text="State"/>
                        <TableColumn fx:id="restricted" prefWidth="187.0" text="Restricted"/>
                    </columns>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="30.0"/>
                    </VBox.margin>
                </TableView>
                <HBox prefHeight="35.0" prefWidth="900.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <Region prefHeight="35.0" prefWidth="621.0"/>
                    <Label prefHeight="36.0" prefWidth="39.0" text="ADD" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Region prefHeight="200.0" prefWidth="29.0"/>
                    <Label prefHeight="43.0" prefWidth="74.0" text="REMOVE" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Region prefHeight="200.0" prefWidth="29.0"/>
                    <Label prefHeight="36.0" prefWidth="134.0" text="SAVE CHANGES" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                </HBox>
                <Label text="RENT HISTORY BY SELECTED SAMPLE" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <TableView fx:id="sampleTable" prefHeight="270.0" prefWidth="910.0">
                    <columns>
                        <TableColumn fx:id="issueDate" prefWidth="241.0" text="Issue date"/>
                        <TableColumn fx:id="returnedDate" prefWidth="140.0" text="Returned date"/>
                        <TableColumn fx:id="status" prefWidth="180.0" text="Status"/>
                        <TableColumn fx:id="member" minWidth="3.0" prefWidth="338.0" text="Member"/>
                    </columns>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="10.0"/>
                    </VBox.margin>
                </TableView>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
